apiVersion: v1
baseDomain: {{baseDomain}}
compute:
- name: worker
  replicas: 0
controlPlane:
  name: master
  replicas: 1
metadata:
  name: {{clusterName}}
networking:
  clusterNetworks:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  machineNetwork:
  - cidr: 192.168.50.0/24
  networkType: OVNKubernetes
  serviceNetwork:
  - 172.30.0.0/16
platform:
  none: {}
bootstrapInPlace:
  installationDisk: {{rhcosStorageDevice}}
pullSecret: '{{redhatPullSecret}}' 
sshKey: '{{bastionSSH}}'